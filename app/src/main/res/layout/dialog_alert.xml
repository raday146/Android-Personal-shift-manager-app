<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dialog_round"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_round"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pop_dialog"
            android:layout_width="305dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="120sp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_view"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:text="@string/note_that_throwing_over_4"
            android:textColor="#BA0E0A0A"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/num_shift"
            android:layout_width="305dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/custom_view"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:text="@string/recommendation_msg"
            android:textColor="#BA090707"
            android:textSize="19sp"  />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="113dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/design_dialog"
            android:layout_marginEnd="44dp"
            android:src="@drawable/ic_baseline_add_alert_24"/>
    </LinearLayout>






</LinearLayout>